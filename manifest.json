{
  "manifest_version": 2,
  "name": "Bitso ticker",
  "description": "Muestra el ultimo precio de bitcoin en Bitso",
  "homepage_url": "https://github.com/manuelfr51/BitcoinAverage",
  "version": "0.0.1",
  "permissions": ["alarms"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
